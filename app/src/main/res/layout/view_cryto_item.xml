<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/txtSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="symbol"
        android:textStyle="bold"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txtSymbol"
        android:layout_marginLeft="10dp"
        android:text="Bitcoin"
        />


    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:text="1000$"

        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/txt24H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="24h:-"
        android:layout_below="@id/txtSymbol"

        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txt24HPriceChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="0%"
        android:layout_alignTop="@id/txt24H"
        android:layout_toRightOf="@id/txt24H"

        android:textColor="@color/colorAccent"/>


    <TextView
        android:id="@+id/txt1H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="1h:-"
        android:layout_below="@id/txt24H"

        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txt1HPriceChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:layout_alignTop="@id/txt1H"
        android:layout_toRightOf="@id/txt1H"
        android:layout_alignLeft="@id/txt24HPriceChange"

        android:textColor="@color/colorAccent"/>
</RelativeLayout>