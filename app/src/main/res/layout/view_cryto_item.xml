<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="10dp">


    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Bitcoin"
        android:textSize="16dp"
        />

    <TextView
        android:id="@+id/txtSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txtName"
        android:text="symbol"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginLeft="10dp"/>


    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/txtName"
        android:layout_marginTop="10dp"
        android:text="1000$"
        android:textColor="@color/colorPrimary"/>

    <TextView
    android:id="@+id/txt24H"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="(24H)"
    android:minEms="3"
    android:layout_alignParentRight="true"
    />

    <TextView
        android:id="@+id/txt24HPriceChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="0%"
        android:layout_alignTop="@id/txt24H"
        android:layout_toLeftOf="@id/txt24H"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/txt1H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(1H)"
        android:layout_alignParentRight="true"
        android:layout_below="@id/txt24H"
        android:minEms="3"
        />

    <TextView
        android:id="@+id/txt1HPriceChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="0%"
        android:layout_alignTop="@id/txt1H"
        android:layout_toLeftOf="@id/txt1H"
        android:textColor="@color/colorAccent"/>

</RelativeLayout>